# API_TOKEN=seu_token_seguro_aqui
# Token de autenticação para proteger as rotas da API
# Deve ser uma string segura e difícil de adivinhar
API_TOKEN=github_rag_api_token_2025

# GITHUB_TOKEN=seu_token_github_aqui
# Token de acesso pessoal do GitHub com permissões para:
# - repo: acesso completo aos repositórios
# - read:user: leitura de informações de usuário
# Obtenha em: https://github.com/settings/tokens
GITHUB_TOKEN=

# OPENAI_API_KEY=sua_chave_openai_aqui
# Chave da API OpenAI para acesso ao GPT-4
# Obtenha em: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# CHROMA_PERSISTENCE_DIRECTORY=./chroma_db
# Diretório para armazenamento persistente do ChromaDB
# Recomendado usar caminho absoluto em produção
CHROMA_PERSISTENCE_DIRECTORY=./chroma_db

# Configurações do servidor
PORT=8000
HOST=0.0.0.0

# Configurações de logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Configurações de cache
ENABLE_CACHE=true
CACHE_EXPIRATION=3600  # Em segundos (1 hora)

# Configurações do modelo LLM
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=1000

# Configurações do modelo de embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Configurações de relatórios
REPORTS_DIRECTORY=./reports
PDF_ENABLED=true
